@model ShoppingCartViewModel

<h2>Cosul dvs. de cumparaturi</h2>
<h4>Aici se afla placintele dvs. delicioase din cosul de cumparaturi.</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Cantitatea</th>
            <th>Placinta</th>
            <th class="text-right">Pret</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-left">@line.Pie.Name</td>
                <td class="text-right">@line.Pie.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.Pie.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>


<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Trimite comanda!</a>
</div>

